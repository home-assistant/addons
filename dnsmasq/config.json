{
  "name": "Dnsmasq",
  "version": "1.3",
  "slug": "dnsmasq",
  "description": "A simple DNS server",
  "url": "https://github.com/home-assistant/hassio-addons/tree/master/dnsmasq",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "system",
  "boot": "auto",
  "host_network": true,
  "options": {
    "defaults": ["8.8.8.8", "8.8.4.4"],
    "forwards": [],
    "hosts": [],
    "networks": []
  },
  "schema": {
    "defaults": ["str"],
    "forwards": [
      {
        "domain": "str",
        "server": "str"
      }
    ],
    "forwards": [{
      "domain": "str",
      "server": "str"
    }],
    "hosts": [{
      "host": "str",
      "mac": "str?",
      "ip": "str"
    }],
    "interface": "str?",
    "address": "str?",
    "lease_time": "str?",
    "domain": "str?",
    "gateway": "str?",
    "networks": [{
      "broadcast": "str",
      "netmask": "str",
      "range_start": "str",
      "range_end": "str"
    }]
  },
  "image": "homeassistant/{arch}-addon-dnsmasq"
}
