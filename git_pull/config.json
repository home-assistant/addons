{
  "name": "Git pull",
  "version": "4.4",
  "slug": "git_pull",
  "description": "Simple git pull to update the local configuration",
  "url": "https://home-assistant.io/addons/git_pull/",
  "startup": "services",
  "boot": "manual",
  "hassio_api": true,
  "map": ["config:rw"],
  "options": {
    "deployment_key": [],
    "deployment_key_protocol": "rsa",
    "deployment_user": "",
    "deployment_password": "",
    "repository": null,
    "auto_restart": false,
    "repeat": {
      "active": false,
      "interval": 300
    }
  },
  "schema": {
    "deployment_key": ["str"],
    "deployment_key_protocol": "match(rsa|dsa|ecdsa|ed25519|rsa)",
    "deployment_user": "str",
    "deployment_password": "str",
    "repository": "match((?:.+):(\/\/)?(.*?)(\\.git)(\/?|\\#[-\\d\\w._]+?))",
    "auto_restart": "bool",
    "repeat": {
      "active": "bool",
      "interval": "int"
    }
  },
  "image": "homeassistant/{arch}-addon-git_pull"
}
